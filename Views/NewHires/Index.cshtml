@model IEnumerable<IT_Control_Tower.NewHire>
@using GridMvc.Html
@section css {

    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />

}
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("Index", "NewHires", FormMethod.Get))
{
    <h2>New Hire Management</h2>
    <b>Search:</b>
    @Html.TextBox("searchText")
    <input type="submit" value="Search" />
}
<p>
   </br> 
    <input type="button" class="btn btn-info" value="Create New Hire" onclick="location.href='@Url.Action("Create")'" />
</p>
<div>

    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(col => col.SESA, false);
    columns.Add(col => col.StartDate, false);
    columns.Add(col => col.Assignee, false);
    columns.Add(col => col.Email, false);
    columns.Add(col => col.Box, false);
    columns.Add(col => col.Computer, false);
    columns.Add(col => col.Headset, false);
    columns.Add(col => col.Printer, false);
    columns.Add().SetWidth(20)
    .Encoded(false)
    .Sanitized(false).RenderValueAs(col => @Html.ActionLink("Edit", "Edit", new { id = col.SESA }));
    columns.Add().SetWidth(20)
    .Encoded(false)
    .Sanitized(false).RenderValueAs(col => @Html.ActionLink("Details", "Details", new { id = col.SESA }));
    columns.Add().SetWidth(20)
    .Encoded(false)
    .Sanitized(false).RenderValueAs(col => @Html.ActionLink("Delete", "Delete", new { id = col.SESA }));
    

}).Sortable().Filterable().WithPaging(3)

</div>
@section Scripts {

    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>

}

